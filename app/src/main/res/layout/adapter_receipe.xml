
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:background="@android:color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        card_view:cardCornerRadius="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/receipeIV"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/indian"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/receipeIV"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/receipeNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pav Bhaji"
                    android:textSize="19sp"
                    android:textColor="@android:color/background_dark"/>

                <TextView
                    android:id="@+id/receipeIngredientTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textSize="14sp"
                    android:textColor="@android:color/tab_indicator_text"/>

                <TextView
                    android:id="@+id/receipeRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating "
                    android:textSize="14sp"
                    android:textColor="@android:color/tab_indicator_text"/>


                </LinearLayout>
            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:background="@android:color/tab_indicator_text"-->
            <!--android:layout_below="@+id/linearLayout">-->
        <!--</View>-->
        </RelativeLayout>

        <!--<view-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:background="@android:color/darker_gray"></view>-->
    </android.support.v7.widget.CardView>
</RelativeLayout>
